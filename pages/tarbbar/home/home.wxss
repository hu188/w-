  padding: 10px 0;
}

.page-order-title {
  font-size: 28rpx;
  color: #555;
  font-weight: bold;
  padding: 20rpx;
  border-bottom: 1px solid #f3f3f3;
  display: flex;
  justify-content: space-between;
}
.pay-order-nar{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
  color: #888;
  width: 20%;
}

.order-img{
  width:50rpx;
  height: 50rpx;
}
.page-opt {
  width: 700rpx;
  margin-left: 25rpx;
  border-radius: 10rpx;
  box-shadow:#bbb 0px 0px 10px;
  height: 306rpx;
  margin-top: 50rpx;
  background-color: #fff;

}

.opt-item {
  font-size: 15px;
  color: #555;
  border-bottom: 1px solid #f6f6f6;
  height: 100rpx;
  padding: 20rpx;
