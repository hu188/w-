.page-top {
  height: 380rpx;
}
.page-user-info{
  position: absolute;
  z-index: 999;
  display: flex;
  align-items: center;
  padding: 30rpx;
  margin-top: 90rpx;
}

.user-bac-img{
  width: 750rpx;
  height: 380rpx;
  position: absolute;
  top: 0;
  left: 0;
}
.avatarUrl-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  /* border: 1px solid #eee; */
}

.user-name {

  font-size: 34rpx;
  color: #fff;
  font-weight: bold;
  margin-left: 20rpx;
}
.page-order-body{
  width: 700rpx;
  margin-left: 25rpx;
  border-radius: 10rpx;
  box-shadow:#999 0px 0px 10px;
